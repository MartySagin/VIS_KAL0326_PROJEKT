@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Přihlášení</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form method="post" action="/Home/Login">
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">Uživatelské jméno</label>
                            <input type="text" id="username" name="username" class="form-control" required placeholder="Zadejte uživatelské jméno" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Heslo</label>
                            <input type="password" id="password" name="password" class="form-control" required placeholder="Zadejte heslo" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Přihlásit se</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
