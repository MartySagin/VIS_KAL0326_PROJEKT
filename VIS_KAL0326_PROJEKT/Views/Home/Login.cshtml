@model LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Přihlášení</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form method="post" asp-action="Login">
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label"></label>

                            <input asp-for="Username" class="form-control" placeholder="Zadejte uživatelské jméno" />

                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>

                            <input asp-for="Password" type="password" class="form-control" placeholder="Zadejte heslo" />

                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Přihlásit se</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>