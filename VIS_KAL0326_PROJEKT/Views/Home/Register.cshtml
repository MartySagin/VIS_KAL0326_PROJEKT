@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Registrace</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success text-center" role="alert">
                            @ViewBag.Message
                        </div>
                    }

                    <form method="post" action="/Home/Register" id="registerForm">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>

                            <input type="email" id="email" name="email" class="form-control" required />

                            <small class="form-text text-muted">Zadejte platnou emailovou adresu.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="telephone" class="form-label">Telefon</label>

                            <input type="tel" id="telephone" name="telephone" class="form-control" required pattern="^\+?\d{9}$" />

                            <small class="form-text text-muted">Telefonní číslo musí mít 9 číslic</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="username" class="form-label">Uživatelské jméno</label>

                            <input type="text" id="username" name="username" class="form-control" required minlength="3" />

                            <small class="form-text text-muted">Uživatelské jméno musí mít alespoň 3 znaky.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Heslo</label>

                            <input type="password" id="password" name="password" class="form-control" required minlength="6" />

                            <small class="form-text text-muted">Heslo musí mít alespoň 6 znaků.</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Registrovat</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
